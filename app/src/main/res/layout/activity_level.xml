<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:background="@drawable/tr2">

        <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:ignore="MissingConstraints"
        android:background="#4caf50"/>

        <Switch
            android:id="@+id/switchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/showQuesBigger"
            tools:ignore="MissingConstraints"
            android:textSize="25sp"
            android:background="#4caf50"/>

        <Button
        android:id="@+id/btnLevel0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/easyQuestions"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/btnLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medQuestions"
        tools:ignore="MissingConstraints"/>

    <Button
        android:id="@+id/btnLevel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hardQuestions"
        tools:ignore="MissingConstraints"/>

        <Button
            android:id="@+id/btnAdminInter"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:text="@string/admin_interface"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="129dp"
            android:layout_height="wrap_content"
            android:text="@string/logout" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>